{
  "expo": {
    "scheme": "PrimelogicTimeClock",
    "name": "timeclock",
    "slug": "timeclock",
    "privacy": "unlisted",
    "sdkVersion": "32.0.0",
  
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],

  "notification": {
    "icon": "./assets/images/icon.png",
    "color": "#000000",
    "androidMode": "default"
     },
    "ios": {
      "bundleIdentifier": "com.plisolutions.timeclock",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationAlwaysUsageDescription" : "needs gps data.", 
	"NSCameraUsageDescription": "This app uses the camera to authenticate users and upload receipts",
	"NSFaceIDUsageDescription": "Authenticate User for App",
        "NSAppTransportSecurity" : {
          "NSAllowsArbitraryLoads" : true,
          "NSAllowsArbitraryLoadsForMedia": true, 
          "NSAllowsArbitraryLoadsInWebContent": true, 
        }
      }
   }
 }
 }